<div class="article-meta-details">
  <small> created by <%= link_to art.user.username, user_path(art.user) %> 
      <%= link_to gravatar_for(art.user, size: 20), user_path(art.user) %>
      , <%= time_ago_in_words(art.created_at) %> ago,
      modified <%= time_ago_in_words(art.updated_at) %> ago, by
      <% if art.last_editor %> 
        <%= link_to art.last_editor.username, user_path(art.last_editor) %>
        <%= link_to gravatar_for(art.last_editor, size: 20), user_path(art.last_editor) %>
      <% else %>
        <%= art.last_editor_name %>
      <% end %>
  </small>
</div> 