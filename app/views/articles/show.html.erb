<h2 class="text-center">Title: '<%= @article.title %>'</h2>

<div class="well faded-black-bg col-xs-8 col-xs-offset-2">
    <h4>Description:</h4> 
    <hr />
    <p> <%= simple_format(@article.description) %> </p>
    <hr />

    <div class="article-actions">
      <%= link_to "edit this article", edit_article_path(@article), class: "btn btn-xs btn-success" %>
      <%= link_to "delete this article", article_path(@article), method: :delete, 
        data: {confirm: "Are you sure you want to delete '#{@article.title}' ?"}, 
        class: "btn btn-xs btn-danger" %>
      <%= link_to "view all articles", articles_path, class: "btn btn-xs btn-primary" %> 
    </div>
</div>

