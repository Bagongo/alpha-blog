<h1>Edit article '<%= @article.description %>'</h1>

<% if @article.errors.any? %>
	<h2>Your article couldn't be created because of the following error(s)</h2>
	<ul>
	<% @article.errors.full_messages.each do |msg| %>
		<li class="color-white"> <%= msg %> </li>
	<% end %>
	</ul>
<% end %>

<%= form_for @article do |f| %>

	<p>
		<%= f.label :title %> 
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %> <br />
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit %>
	</p>

	<%= render "shared/back_to_articles" %> 

 <% end %>