<h1 class="text-center">Listing all Categories</h1>

<div class="text-center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="list-without-style">
      <div class="row">
        <div class="well faded-white-bg text-center col-md-4 col-md-offset-4">
          <li class="article-title"> <%= link_to category.name, category_path(category) %> </li>
          <li>
            <small><%= pluralize(category.articles.count, "article") %></small>
          </li>
        </div> 
      </div> 
    </ul>
  <% end %>
  <%= will_paginate %>
</div>  